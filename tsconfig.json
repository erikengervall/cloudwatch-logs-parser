{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
